<idea-plugin>
  <id>com.faebeee.vuecomponentcreator</id>
  <name>Vue Component Creator</name>
  <version>0.3.2</version>
  <vendor email="faebeee@gmail.com" url="http://fabs.io">Fabs.io</vendor>

  <description><![CDATA[
      Generate Single file vue component with it's css file in a folder
    ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>Update description</li>
      </ul>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products -->
  <depends>com.intellij.modules.lang</depends>


  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="VueComponent.ComponentCreatorAction" class="ComponentCreatorAction" text="Vue Component"
            description="Create Vue component">
      <add-to-group group-id="NewGroup" anchor="first"/>
    </action>
  </actions>

</idea-plugin>